{
    "name": "yiisoft/mailer-swiftmailer",
    "description": "Yii Mailer Library - Swift Mailer Extension",
    "keywords": [
        "yii",
        "swift",
        "swiftmailer",
        "mail",
        "email",
        "mailer"
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/yiisoft/mailer-swiftmailer",
        "issues": "https://github.com/yiisoft/mailer-swiftmailer/issues",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "swiftmailer/swiftmailer": "^6.2",
        "yiisoft/mailer": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "roave/infection-static-analysis-plugin": "^1.5",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.4",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/event-dispatcher": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Mailer\\SwiftMailer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Mailer\\SwiftMailer\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin": {
            "params": "config/params.php",
            "common": "config/common.php"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
